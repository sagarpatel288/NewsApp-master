<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CtvTitle">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/text_heading_20</item>
        <item name="typeface">bold</item>
        <item name="btnTxtColor">@color/colorTitle</item>
    </style>

    <style name="CtvSub">
        <item name="android:textSize">@dimen/txt_heading_14</item>
        <item name="typeface">regular</item>
        <item name="btnTxtColor">@color/colorSection</item>
        <item name="android:textColor">@color/colorSection</item>
    </style>

</resources>
